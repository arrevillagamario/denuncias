generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Denuncias{
  id Int @default(autoincrement()) @unique
  user User @relation(fields:[id_user],references: [dui])
  municipio Municipio @relation(fields: [id_municipio], references: [id])
  fecha DateTime @default(now())
  descripcion String
  direccion String
  estado String
  id_user Int
  id_municipio Int
}


model User{
  dui Int @id @unique
  nombre String 
  apellido String
  email String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  denuncias Denuncias[]
}

model Municipio{
  id Int @default(autoincrement()) @unique
  nombre String
  denuncias Denuncias[]
}

